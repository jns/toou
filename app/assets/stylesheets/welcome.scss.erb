@import 'colors';

.product-list-label {
  text-align: center;
}

.product-list {
  margin: 0 auto;
  text-align: center;
}

.product {
  width: 100px;
  height: 100px;
  padding: 8px 8px 8px 8px;
  margin: 8px 8px 8px 8px;
  display: inline-block;
  text-align: center;
  border-radius: 50% 50%;
  background: darkgray;
  color: white;
}

.product.selected {
  background: indianred;
}

.product-name {

}

.porduct-price.selected {
  color: indianred;
}

.product-price {
  color: white;
  font-size: 8pt;
}

.product-icon.beer {
  width: 50px;
  height: 50px;
  mask: url(<%= asset_path 'product_images/beer-icon.png' %>);
  background-color: white;
  margin: 0 auto;
}



#HandGlass {
    width: 100%;
    height: 160px;
    background-image: url(<%= asset_path 'HandGlass.png'%>);
    background-size: 194px 160px;
    background-position: center;
    background-repeat: no-repeat;
}

.barby-barcode {
  margin: 0 auto;
}

.barby-cell {
  padding: 0px 1px 100px;
}

.barby-cell.on {
  background-color: black;
}

.barby-cell.off {
  background-color: white;
}

.carousel-control-prev-icon, .carousel-control-next-icon {
    height: 30px;
    width: 30px;
    outline: black;
    background-color: rgba(0, 0, 0, 0.3);
    background-size: 100%, 100%;
    border-radius: 50%;
    border: 1px solid black;
}

.carousel-indicators li {
  background-color: #999;
  background-color: rgba(70,70,70,.25);
}

.carousel-indicators .active {
  background-color: #444;
}

.howitworks-img { 
  margin-top: -80px;
}


.promo {
  text-align: center;
}

.promo-name {
  font-size: 20pt;
}

.promo-copy {
  font-size: 14pt;
}

.promo-product {
  font-size: 12pt;
}

.pass {
  margin: 8px 8px 8px 8px;
}

input.placeholder {
  text-align: center;
}