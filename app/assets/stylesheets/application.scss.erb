@import "bootstrap";
@import url('https://fonts.googleapis.com/css?family=Maven+Pro:400,500');
@import 'colors';

body {
    font-family: 'Maven Pro', sans-serif;
    color: $app-darkgray;
}

.navbar {
    background-color: $app-turquoise;
    -webkit-border-radius: 4px;
    border-radius: 4px;
    -webkit-box-shadow: 2px 2px 3px 0px rgba(0,0,0,0.5); 
    box-shadow: 2px 2px 3px 0px rgba(0,0,0,0.5);
}

.navbar-brand {
    background-image: url(<%= asset_path 'TooULogoMini' %>);
    background-size: 100px 50px; 
    width: 100px;
    height: 50px;
    
    &:hover {
        background-color: $app-turquoise;
    }
}

.content-width {
  width: 70%;
}

.icon {
  width: 16px;
  height: 16px;
}

.regular-20pt {
    font-size: 20pt;
    font-weight: 400;
}

.medium-20pt {
    font-size: 20pt;
    font-weight: 500;
}

.regular-28pt {
    font-size: 28pt;
    font-weight: 400;
}
.medium-28pt {
    font-size: 28pt;
    font-weight: 500;
}


a {
  color: $app-turquoise;

  &:visited {
    color: $app-darkgray;
  }

  &:hover {
    color: $app-darkgray;
  }
}

.flash {
 color: $app-red;
 text-align: center;
 padding-top: 8px;
}

.darkgray {
    color: $app-darkgray;
}

.app-red {
    color: $app-red;
}
