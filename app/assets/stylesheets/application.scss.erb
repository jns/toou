@import "bootstrap";
@import url('https://fonts.googleapis.com/css?family=Maven+Pro:400,500');
@import 'colors';

body {
    background-color: #fff;
    font-family: 'Maven Pro', sans-serif;
    color: $app-darkgray;
    line-height: 18px;
    font-size: 13px;
}

.below-header {
    margin: 70px auto;
}

.navlink {
    font-size: 18pt;
}

.navbar {
    position: fixed;
    width: 100%;
    height: 70px;
    top: 0;
    left: 0;
    z-index: 99;
    background-color: $app-turquoise;
//    -webkit-border-radius: 4px;
//    border-radius: 4px;
    -webkit-box-shadow: 0px 2px 3px 0px rgba(0,0,0,0.5); 
    box-shadow: 0px 2px 3px 0px rgba(0,0,0,0.5);
}

.nav-breadcrumb {
    color: rgb(245, 245, 245);
    font-size: 16pt;
    position: absolute;
}

.navbar-dropdown {
    position: absolute;
    right: 0;
    padding-right: 16px;
}

.navbar-brand {
    background-image: url(<%= asset_path 'TooULogoMini' %>);
    background-repeat: no-repeat;
    background-size: 100px 50px; 
    width: 100px;
    height: 50px;
    
    &:hover {
        background-color: $app-turquoise;
    }
}

.content-width {
    width: 100%;
}

@media (min-width: 750px) {
    .content-width {
      width: 70%;
    }
}


.half-width {
  width: 35%;
}

.icon {
  width: 16px;
  height: 16px;
}

.regular-16pt {
    font-size: 16pt;
    font-weight: 400;
}

.regular-20pt {
    font-size: 20pt;
    font-weight: 400;
}

.medium-20pt {
    font-size: 20pt;
    font-weight: 500;
}

.regular-28pt {
    font-size: 28pt;
    font-weight: 400;
}
.medium-28pt {
    font-size: 28pt;
    font-weight: 500;
}


a {
  color: $app-turquoise;

  &:hover {
    color: $app-darkgray;
  }
}

.flash {
 color: $app-red;
 text-align: center;
 padding-top: 8px;
}

.darkgray {
    color: $app-darkgray;
}

.app-red {
    color: $app-red;
}

.footer {
  position: fixed;
  font-size: 8pt;
  bottom: 0;
  left: 0;
  background-color: white;
}

.buy-graphic {
    
    background-image: url(<%= asset_path 'BuyRoundGrey100.png' %>);
    background-repeat: no-repeat;
    background-size: 75px 75px; 
    width: 75px;
    height: 75px;
    margin: 0 auto;
}

.drink-graphic {
    background-image: url(<%= asset_path 'RedeemRoundGrey100.png' %>);
    background-repeat: no-repeat;
    background-size: 75px 75px; 
    width: 75px;
    height: 75px;
    margin: 0 auto;
}

a.btn.btn-primary:visited {
    color: white;
}

.error {
    color: red;
}