<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark">
  <ul class="navbar-nav">
      <% if session["auth_token"] %>
        <li class="dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Go To</a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <%= link_to "Logs", '/admin/logs', class: 'dropdown-item' %>
            <%= link_to "Passes", '/admin/passes', class: 'dropdown-item' %>
            <%= link_to "Orders", '/admin/orders', class: 'dropdown-item' %>
            <%= link_to "Accounts", '/admin/accounts', class: 'dropdown-item' %>
            <div class="dropdown-divider"></div>
            <%= link_to "logout", '/admin/logout', class: 'dropdown-item' %>
          </div>
        </li>
      <% else %>
        <li class="nav-link"><%= link_to "login", 'admin/login', class: 'nav-link'%></li>
      <% end %>
  </ul>
  <a class="navbar-brand mx-auto" href="/"></a>
  
</nav>

<div class="flash">
    <% flash.each do |name, msg| -%>
      <%= content_tag :div, msg, class: name %>
    <% end -%>
</div>

<%= yield %>

<footer class="footer">
  <div class="container">
    <span class="text-muted">Â©2019 TooU Incorporated, All Rights Reserved</span>
  </div>
</footer>

</body>
</html>
