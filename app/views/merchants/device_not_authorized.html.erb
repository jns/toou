
<div class="container content-width">
<div class="text-center h3">
Enter merchant email and password to authorize this device
</div>

<%= form_with url: api_merchant_authorize_device_url, remote: true do |form| %>
    
  <div class="row">
    <div class="col">
      <div class="form-group">
        <%= label :email, "Email" %>
        <%= text_field :authorization, :email, class: "form-control" %>
      </div>  
    </div>
  </div>
  
    <div class="row">
    <div class="col">
      <div class="form-group">
        <%= label :password, "Password" %>
        <%= password_field :authorization, :password, class: "form-control" %>
      </div>  
    </div>
  </div>
  
    <div class="row">
    <div class="col">
      <div class="form-group">
        <%= label :device, "Device Name" %>
        <%= text_field :data, :device_id, class: "form-control" %>
      </div>  
    </div>
  </div>
  
  
  <div class="row col justify-content-center">
      <%= form.submit "Authorize Device", class: "btn btn-primary" %>
  </div>
<% end %>    
    
</div>
